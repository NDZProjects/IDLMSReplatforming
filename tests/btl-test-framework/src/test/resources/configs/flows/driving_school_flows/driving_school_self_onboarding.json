        "email": "fcsd.${randomString:6}@mailinnator.com",
        "logo": "${randomString:12}",
        "phone": "${phoneNumber:090,11}",
        "stateId": 25,
        "lgaId": 518,
        "address": "Mkanjuola, Eve, Ikeja, Lagos",
        "rcNumber": "RC-997978",
        "password": "1passwor#D"
      },
      "extract": {
        "identifier": "data.identifier",
        "drivingSchoolId": "data.id"
